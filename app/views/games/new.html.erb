<div class="container">
<div class="row">
<div class="letter-grid d-flex justify-content-center">
  <% @letters.each do |letter| %>
    <div class="letter text-white">
      <%= letter %>
    </div>
  <% end %>
</div>
</div>
<div class="row">
<div class="row justify-content-center">
  <form class="d-flex w-50" action="score" method="post" data-turbo="false">
    <input class="form-control" type="text" name="word" placeholder="Your word" />
    <input class="btn btn-primary" type="submit" value="Go!" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
</div>
</div>
